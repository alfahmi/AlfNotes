<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:padding="30dp"
    android:orientation="vertical">
    <EditText
		android:id="@+id/alfahmi__edt_dialog_name"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:layout_marginTop="@dimen/alfahmi__add_dialog_margin"
		android:inputType="text"
		android:hint="Nama" />
	<Spinner
		android:id="@+id/alfahmi__spnr_dialog_product"
		style="@style/Base.Widget.AppCompat.Spinner.Underlined"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/alfahmi__add_dialog_margin"
		android:spinnerMode="dialog"
		android:entries="@array/alfahmi__list_product"></Spinner>
	<LinearLayout
		android:id="@+id/alfahmi_layout"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:orientation="horizontal"
		android:layout_marginTop="@dimen/alfahmi__add_dialog_margin">
		
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="45dp"
			android:layout_weight="1.0"
			android:orientation="vertical">
			<Spinner
				android:id="@+id/alfahmi__spnr_dialog_regular"
				style="@style/Base.Widget.AppCompat.Spinner.Underlined"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:spinnerMode="dialog"
				android:entries="@array/alfahmi__list_regular"></Spinner>
			<Spinner
				android:id="@+id/alfahmi__spnr_dialog_package"
				style="@style/Base.Widget.AppCompat.Spinner.Underlined"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:spinnerMode="dialog"
				android:entries="@array/alfahmi__list_package"></Spinner>
		</LinearLayout>
		<EditText
			android:id="@+id/alfahmi__edt_qty"
			android:layout_width="70dp"
			android:layout_height="45dp"
			android:inputType="number"
			android:hint="Qty"
			android:text="1" />
	</LinearLayout>
	<EditText
		android:id="@+id/alfahmi__edt_dialog_phone"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:layout_marginTop="@dimen/alfahmi__add_dialog_margin"
		android:inputType="number"
		android:hint="Nomor Telepon" />
	<EditText
		android:id="@+id/alfahmi__edt_dialog_price"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:layout_marginTop="@dimen/alfahmi__add_dialog_margin"
		android:inputType="number"
		android:hint="Nominal" />
</LinearLayout>
