<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
	android:orientation="horizontal">
	
	<LinearLayout
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_margin="10dp"
		android:gravity="center"
		android:background="@drawable/alfahmi__circle_shape">
    <TextView
        android:id="@+id/alfahmi__penjualan_no"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="No"
		android:textSize="16dp"
		android:gravity="center" />

  	</LinearLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="50dp"
		android:layout_weight="1.0"
		android:orientation="vertical"
		android:gravity="center">
		<TextView
			android:id="@+id/alfahmi__penjualan_nama"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:text="phone Nama"
			android:gravity="left"
			android:textSize="25dp"/>
	<TextView
			android:id="@+id/alfahmi__penjualan_nomor"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:text="phone number"
			android:gravity="left"
			android:textSize="15dp"/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="50dp"
		android:layout_weight="1.0"
		android:orientation="vertical"
		android:layout_marginRight="10dp">
    <TextView
        android:id="@+id/alfahmi__penjualan_harga"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_weight="1.0"
        android:text="harga"
		android:gravity="right"
		android:textSize="23dp"/>
	<TextView
        android:id="@+id/alfahmi__penjualan_tanggaltrx"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_weight="1.0"
        android:text="jenis"
		android:gravity="right"
		android:textSize="13dp"/>
    </LinearLayout>
</LinearLayout>
